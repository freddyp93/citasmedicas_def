<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="citasmedicas.Ingreso">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout BackgroundColor="WhiteSmoke">
                <Label Text="Ingreso de Pacientes " x:Name="lblTexto1" FontSize="20" TextColor="Blue" HorizontalTextAlignment="Center"/>
                
                    <Button x:Name="btnregistrarpaciente" Text="Registrar paciente" Clicked="btnregistrarpaciente_Clicked" />
                    <Button x:Name="btnsolicitarcita" Text="Solicitar Cita" Clicked="btnsolicitarcita_Clicked" />
                    <Button x:Name="btncancelarcita" Text="Cancelar cita" Clicked="btncancelarcita_Clicked" />
              
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>