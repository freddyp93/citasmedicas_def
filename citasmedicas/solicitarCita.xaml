<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="citasmedicas.solicitarCita">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="SOLICITUD DE CITAS" HorizontalTextAlignment="Center" FontSize="18"/>
            <Label Text="Solicite su cita" HorizontalTextAlignment="Center" FontSize="16"/>
            <Grid>
                <Label Text="PACIENTE" Grid.Row="0" Grid.Column="0"/>
                <Label Text="ESPECIALIDAD" Grid.Row="1" Grid.Column="0"/>
                <Label Text="MEDICO" Grid.Row="2" Grid.Column="0"/>
                <Label Text="OBSERVACION" Grid.Row="3" Grid.Column="0"/>
                <Entry x:Name="txtObservacion" Placeholder="Observacion" Grid.Row="3" Grid.Column="1"/>
            </Grid>
            <Button x:Name="Reservarcita" Text="Reservar" Clicked="Reservarcita_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>